<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/MainMenuLayout"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:paddingTop="10dp"


        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_gravity="start"
            android:text="@string/appName"
            style="@style/HeaderFontStyleMainMenu"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_height"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingHorizontal="12dp"
        android:paddingEnd="24dp"
        tools:ignore="RtlSymmetry">


        <Button
            android:id="@+id/bt_find"
            style="@style/ButtonStyleMain"
            android:text="@string/find"
            app:icon="@drawable/find" />

        <Button
            android:id="@+id/bt_media"
            style="@style/ButtonStyleMain"
            android:text="@string/media"

            app:icon="@drawable/media"

            />

        <Button
            android:id="@+id/bt_setting"
            style="@style/ButtonStyleMain"
            android:text="@string/setting"

            app:icon="@drawable/setting" />

    </LinearLayout>


</LinearLayout>