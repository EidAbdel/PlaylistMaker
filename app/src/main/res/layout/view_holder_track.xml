<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/vh_track_margin_end">

        <ImageView
            android:id="@+id/im_artwork"
            android:layout_width="@dimen/vh_track_art_size"
            android:layout_height="@dimen/vh_track_art_size"
            android:layout_gravity="start|center"
            android:scaleType="center"
            android:layout_marginStart="@dimen/vh_track_layout_marginStart"
            tools:src="@drawable/mock_music" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/half_margin"
            android:layout_marginBottom="@dimen/vh_track_margin"
            android:gravity="start"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tx_track_name"
                style="@style/Track"
                android:layout_marginTop="@dimen/vh_track_margin"
                android:textColor="@color/black_white"
                tools:text="Eleanor Rigby"
                android:textSize="@dimen/text_size_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_artist_name"
                    style="@style/Track"
                    tools:text="The Beatles" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/ellipse" />

                <TextView
                    android:id="@+id/tx_track_time"
                    style="@style/Track"
                    tools:text="6:12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/im_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/vh_track_margin_end_half"
        android:src="@drawable/forward" />
</FrameLayout>