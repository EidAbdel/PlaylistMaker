<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioPlayerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_back_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.HeaderIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/im_artwork"
        android:layout_width="0dp"
        android:layout_height="312dp"
        android:scaleType="center"
        tools:src="@drawable/mock_music"
        app:layout_constraintTop_toBottomOf="@id/tb_back_search"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        />

    <TextView
        android:id="@+id/tx_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/im_artwork"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:textColor="@color/black_white"
        tools:text="Eleanor Rigby"
         />
    <TextView
        android:id="@+id/tx_track_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tx_track_name"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:textColor="@color/black_white"
        tools:text="Eleanor Rigby"
        />
    <ImageButton
        android:id="@+id/playListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_list_ass"

        app:layout_constraintTop_toBottomOf="@id/tx_track_group"
        android:layout_marginTop="54dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"

        />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/play_list_ass"
        app:layout_constraintStart_toEndOf="@id/playListButton"
        app:layout_constraintEnd_toStartOf="@id/likeButton"
        app:layout_constraintTop_toBottomOf="@id/tx_track_group"


        />

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/play_list_ass"
        app:layout_constraintTop_toBottomOf="@id/tx_track_group"
        android:layout_marginTop="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        />
    <TextView
        android:id="@+id/tx_track_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/playButton"
        app:layout_constraintEnd_toEndOf="@id/playButton"
        android:textColor="@color/black_white"
        tools:text="5:43"
        android:textAlignment="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>