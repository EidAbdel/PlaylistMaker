<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainMenuLayout" parent="@style/MainLayout">
        <item name="android:background">@color/blue</item>
    </style>


    <style name="ButtonStyleMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_height</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:backgroundTint">@color/white</item>

        <item name="android:foreground">?attr/selectableItemBackground</item>


        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">@dimen/button_text_size</item>

        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ButtonStyleSetting" parent="@style/Widget.AppCompat.Button.Borderless">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_list</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/icon_color</item>


    </style>

    <style name="HeaderFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderFontStyleMainMenu" parent="@style/HeaderFontStyle">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Track">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_color_track</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:text">Mock</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NothingFound">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">100dp</item>
        <item name="android:src">@drawable/nothing_found</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SomethingWentWrong">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">100dp</item>
        <item name="android:src">@drawable/something_went_wrong</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">236dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RefreshErrorButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">348dp</item>
        <item name="android:textColor">@color/white_dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/dark_white</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/refresh</item>
    </style>



    <style name="PlayerTrackInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>






        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="PlayerTrackInfoDate" parent="@style/PlayerTrackInfo">



        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

</resources>